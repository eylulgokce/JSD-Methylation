	journal = {Plant Physiology},
	author = {Weiszmann, Jakob and Walther, Dirk and Clauw, Pieter and Back, Georg and Gunis, Joanna and Reichardt, Ilka and Koemeda, Stefanie and Jez, Jakub and Nordborg, Magnus and Schwarzerova, Jana and Pierides, Iro and Nägele, Thomas and Weckwerth, Wolfram},
