	note = {Publisher: Frontiers},
	keywords = {complex disease, critical state, Dark genes, dynamic network biomarker (DNB), Single-sample Jensen-Shannon divergence(sJSD), sJSD signal marker},
	file = {Full Text PDF:files/334/Yan et al. - 2021 - Identifying Critical States of Complex Diseases by Single-Sample Jensen-Shannon Divergence.pdf:application/pdf},
}

